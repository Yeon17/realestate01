{{>layout/header}}

  <main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="/">홈</a></li>
            <li>회원관리</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="notice">
      <div class="container">
        <div class="section-title">
          <h2 >회원 관리</h2>
        </div>
        <div class="col-lg-12">
            <table class="table table-hover hangul" rules="groups">
                <thead bgcolor="#9ac3e1" >
                    <tr>
                        <th>번호</th>
                        <th>이메일</th>
                        <th>이름</th>
                        <th>가입일</th>
                        <th>구분</th>
                        <th>탈퇴</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    {{#userList}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{email}}</td>
                            <td>{{name}}</td>
                            <td>{{createdDate}}</td>
                            <td>{{role}}</td>
                            <td><button name="btn-member-delete" data-mid={{id}} class="midList btn btn-outline-dark btn-sm">삭제</button></td>
                        </tr>
                    {{/userList}}
                </tbody>
            </table>
        </div>
      </div>
    </section>

  </main><!-- End #main -->

{{>layout/footer}}
