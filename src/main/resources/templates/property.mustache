{{>layout/header}}

  <main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="/">홈</a></li>
            <li>매물보기</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="property-lookup">
      <div class="container" data-aos="fade-up">
        <div class="section-title">
          <h2 class="hangul">매물보기</h2>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <ul class="menu-filters" >
              <li onclick="location.href='/property'" class="apt-main">전체</li>
              <li onclick="location.href='/property/park-xi'" class="apt-main">동천파크자이</li>
              <li onclick="location.href='/property/eastpole'" class="apt-main">인근 단지</li>
            </ul>
            <ul id ='etc_detail' class="menu-filters" style="display:none;">
                <li onclick="location.href='/property/eastpole'" class="apt-etc">더샵 동천 이스트포레</li>
                <li onclick="location.href='/property/samsung4'" class="apt-etc">수지 삼성4차</li>
                <li onclick="location.href='/property/eastpark'" class="apt-etc">수지 래미안이스트파크</li>
                <li onclick="location.href='/property/puleujio'" class="apt-etc">수지 파크푸르지오</li>
            </ul>
          </div>
        </div>

        <div class="row no-gutters">
        {{#property}}
          <div class="col-lg-3 content-item" style="text-align:center;">
          <a href="/property-detail/{{id}}">
            {{#represent_img}}
                <img src={{represent_img}} class="img-size">
            {{/represent_img}}
            {{^represent_img}}
                <div class="default-img">{{apart}} {{address}}<br />{{price}}</div>
            {{/represent_img}}
            <h5 style="max-width:450px;margin-top:5px;">{{title}}</h5>
          </a>
          </div>
        {{/property}}
        </div>

            <ul style="display:flex; justify-content:center;margin-top:20px;" class="pagination">
                {{#check_pre}}
                    <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
                {{/check_pre}}
                {{#view_numbers}}
                    <li class="page-item"><a class="page-link" href="?page={{.}}">{{.}}</a></li>
                {{/view_numbers}}
                {{#check_next}}
                    <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
                {{/check_next}}
            </ul>
      </div>
    </section>

  </main><!-- End #main -->

  {{>layout/footer}}