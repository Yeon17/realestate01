{{>layout/header}}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <ol>
                    <li><a href="/">홈</a></li>
                    <li><a href="/property">매물보기</a></li>
                    <li>상세정보</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="property-detail">
        <div class="container">

            <div  data-aos="fade-up" data-aos-delay="300" >
                <div class="row margin-bottom-40" >
                    <div class="shadow-box-form" style="margin: 0 auto;width:800px;">
                        <div class="detail_fixed">
                            <div class="main_info_area"><!--윗칸-->
                            {{#scrap}}
                            <input id="scrap_check" style="display:none" value="on">
                            {{/scrap}}
                            {{^scrap}}
                            <input id="scrap_check" style="display:none" value="off">
                            {{/scrap}}
                            {{#oauth}}
                            <input id='oauth' value="{{oauth}}" style="display:none;">
                            {{/oauth}}
                                <span>
                                    <i id="btn-cart" class="fa fa-star fa-border" aria-hidden="true" style="float:right;"> 찜하기</i>
                                </span>
                                <div class="info_title_wrap" >
                                    <h4 class="info_title">
                                        <strong class="info_title_name">{{property.apart}} {{property.address}}
                                        {{property.floor_height}}</strong></h4>
                                </div>
                                <div class="info_article_price " >
                                  <h5>
                                    <span class="type">{{property.trade}}</span>
                                    <span class="price">{{property.price}}</span>
                                  </h5>
                                </div>
                            </div>
                        </div>
                        <div class="tab_area">
                            <i class="fa fa-dot-circle-o" aria-hidden="true"></i>
                            매물정보
                        </div>
                        <div class="detail_box_summary" >
                            <div id="p_images" class="carousel slide" data-interval="false" style="margin: 0 auto;width:500px;">

                                <ol class="carousel-indicators" id="hero-carousel-indicators">
                                    {{#img}}
                                        <li data-target="#p_images" data-slide-to={{.}}></li>
                                    {{/img}}
                                </ol>

                                <div class="carousel-inner" role="listbox">
                                    {{#img_arr}}
                                        <div class="carousel-item">
                                            <img src={{.}} style="width: 500px; height:300px;">
                                        </div>
                                    {{/img_arr}}
                                </div>

                                {{^img_arr}}
                                    <img src="/img/no_img.gif" style="width: 500px; height:300px; border:1px solid #D3D3D3;">
                                {{/img_arr}}

                                <a class="carousel-control-prev" href="#p_images" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#p_images" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>

                            <table class="info_table_wrap" style="margin-top:20px">
                                <tbody>
                                <tr class="info_table_item" >
                                    <th class="" scope="row">제목</th>
                                    <td class="" colspan="3">{{property.title}}</td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="" scope="row">공급/전용면적</th>
                                    <td class="" colspan="3">
                                        {{property.supply_area_py}}평({{property.supply_area}}㎡)/{{property.actual_area_py}}평({{property.actual_area}}㎡)
                                    </td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">해당층/총층</th>
                                    <td class="table_td">
                                        {{property.floor_current}}층/{{property.floor_total}}층({{property.floor_height}})
                                    </td>
                                    <th class="table_th" scope="row">방수/욕실수</th>
                                    <td class="table_td">{{property.room}}/{{property.bathroom}}개</td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">월관리비</th>
                                    <td class="table_td">{{property.admin_expense}}만원</td>
                                    <th class="table_th" scope="row">관리비 포함</th>
                                    <td class="table_td">{{property.include}}</td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">방향</th>
                                    <td class="table_td">{{property.direction}}</td>
                                    <th class="table_th" scope="row">엘리베이터</th>
                                    <td class="table_td">{{property.elevator}}</td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">난방</th>
                                    <td class="table_td">{{property.heat}}</td>
                                    <th class="table_th" scope="row">총주차대수</th>
                                    <td class="table_td">{{property.park_all}}대(세대당 {{property.park}}대)</td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">입주가능일</th>
                                    <td class="table_td" colspan="3">{{property.enter_date}}</td>
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">해당면적 세대수</th>
                                    <td class="table_td">{{property.household}}세대</td>
                                    <th class="table_th" scope="row">매물번호</th>
                                    <td class="table_td">{{property.id}}</td>
                                    <input id='id' type='text' value="{{property.id}}" style="display:none;">
                                </tr>
                                <tr class="info_table_item">
                                    <th class="table_th" scope="row">매물설명</th>
                                    <td class="table_td" colspan="3" style="width:616px;">
                                        <span class="string_html" data-contents = '{{property.content}}'>
                                        </span>
                                    </td>
                                </tr>
                                </tbody>
                            </table>

                        </div>

                        <div class="text-center">
                            {{#IsUser}}
                            <button class="btn-white" style="margin-top:20px" onclick="location.href='/administer/update-property/{{property.id}}'">수정</button>
                            <button id ='btn-property-delete' class="btn-white" style="margin-top:20px">삭제</button>
                            {{/IsUser}}
                             <button class="btn-white" style="margin-top:20px" onclick="location.href='/property'">목록</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </section><!-- End Contact Us Section -->

</main><!-- End #main -->

{{>layout/footer}}