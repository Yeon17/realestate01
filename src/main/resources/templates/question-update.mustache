{{>layout/header}}

  <main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="/">홈</a></li>
            <li><a href="/question">Q&A</a></li>
            <li>수정하기</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="enroll-post">
      <div class="container">
        <div class="section-title">
          <h2 class="hangul">수정하기</h2>
        </div>
        <div class="form-group row" style="border-top: 1px solid #E2E2E2;border-bottom: 1px solid #E2E2E2;padding:10px;margin:0px;">
          <label class="col-sm-1 col-form-label">제목</label>
          <div class="col-sm-11">
            <input type="text" id="title" class="form-control" placeholder="제목 입력" value="{{question.title}}">
          </div>
        </div>
        <div class="form-group row" style="border-bottom: 1px solid #E2E2E2;padding:10px;margin:0px;">
          <label class="col-sm-1 col-form-label">작성자</label>
          <div class="col-sm-11" style="padding-top:7px;">
            <input type="text" id="author" class="form-control" value="{{question.author}}" style="display:none">
            {{question.author}}
          </div>
        </div>
        <div class="form-group row" style="border: 1px solid #E2E2E2;padding:10px;margin:10px 0 0 0px;" >
          <textarea id="summernote" style="width:100%" rows="15">
            {{question.content}}
          </textarea>
        </div>
        <input id='id' type="text" value="{{question.id}}" style="display:none">
        <div class="form-group text-center" style="border-top: 1px solid black;margin:10px 0 0 0px;padding-top:10px;">
          <button class="submit" onclick="location.href='/question'" style="margin-right:5px">취소</button>
          <button id="btn-question-update" class="submit" style="background: #428bca;color: #fff;">저장</button>
        </div>


      </div>
    </section>

  </main><!-- End #main -->

  {{>layout/footer}}