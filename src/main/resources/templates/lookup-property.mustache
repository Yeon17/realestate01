{{>layout/header}}

  <main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="index.html">홈</a></li>
            <li>매물보기</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="property-lookup">
      <div class="container" data-aos="fade-up">
        <div class="section-title hangul">
          <h2 class="hangul">매물보기</strong></h2>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <ul class="portfolio-filters" >
              <li onclick="location.href=''" class="btn-re">전체</li>
              <li onclick="location.href=''" class="btn-re">동천파크자이</li>
              <li onclick="location.href=''" class="btn-re">인근 단지</li>
            </ul>
          </div>
        </div>

        <div class="row no-gutters">
        {{#property}}
          <div class="col-lg-3 col-md-6 content-item">
            {{#represent_img}}
                <img src={{represent_img}} class="img-size">
            {{/represent_img}}
            {{^represent_img}}
                <div class="default-img">{{apart}} {{address}}<br />{{price}}</div>
            {{/represent_img}}
            <h4>{{title}}</h4>
          </div>
        {{/property}}
        </div>

            <ul style="display:flex; justify-content:center;margin-top:20px;" class="pagination">
                {{#check_pre}}
                    <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
                {{/check_pre}}
                {{#view_numbers}}
                    <li class="page-item"><a class="page-link" href="?page={{.}}">{{.}}</a></li>
                {{/view_numbers}}
                {{#check_next}}
                    <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
                {{/check_next}}
            </ul>
      </div>
    </section>

  </main><!-- End #main -->

  {{>layout/footer}}