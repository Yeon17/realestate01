{{>layout/header}}

 <main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="/">홈</a></li>
            <li><a href="/question">Q&A</a></li>
            <li>상세보기</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="post-detail">
        <div class="container">
            <div class="posts-title">
                <h3><strong class="hangul" >{{question.title}}</strong></h3>
                <div class="enroll_info">
                    <dl>
                      <dt style="position:static"> <i class="fa fa-user-circle" aria-hidden="true"></i> </dt>
                      <dd> {{question.author}} </dd>
                      <dt> <i class="fa fa-clock-o" aria-hidden="true"></i> </dt>
                      <dd class="date"> {{question.modifiedDate}} </dd>
                    </dl>
                </div>
            </div>
            <div class="post_text_box">
                <div class="string_html" data-contents="{{question.content}}" style="border-bottom: 1px solid #e4e4e4">
                </div>
                <input id='id' type="text" value="{{question.id}}" style="display:none">


                {{#answer}}
                <div class="answer_wrap">
                    <div class="answer_info">
                        <strong>
                          <span><i class="fa fa-commenting" aria-hidden="true"></i> 답변</span>
                          <em>&nbsp;</em>
                        </strong>
                    </div>
                    <div class="answer">
                        <dl class="info">
                          <dt class="el-dt"> <i class="fa fa-user-circle" aria-hidden="true"></i> </dt>
                          <dd> {{author}} </dd>

                            <dt> <i class="fa fa-clock-o" aria-hidden="true"></i> </dt>
                            <dd class="date"> {{modifiedDate}} </dd>

                        </dl>

                        <input id='ans_id' type="text" value="{{id}}" style="display:none">
                        <div id = "view_ans">
                            <pre id = "view_ans_text" >{{content}}</pre>
                            {{#admin}}
                            <button onclick='modi_ans()' class="btn btn-secondary btn-sm">수정</button>
                            <button id='btn-answer-delete' class="btn btn-secondary btn-sm">삭제</button>
                            {{/admin}}
                        </div>

                    </div>
                </div>
                {{/answer}}

                {{^answer}}
                {{#admin}}
                <div class="answer_wrap">
                    <div class="answer_info">
                        <strong>
                          <span><i class="fa fa-commenting" aria-hidden="true"></i> 답변</span>
                          <em>&nbsp;</em>
                        </strong>
                    </div>
                    <div class="answer">
                        <dl class="info">
                          <dt class="el-dt"> <i class="fa fa-user-circle" aria-hidden="true"></i> </dt>
                          <dd> {{admin_name}} </dd>
                          <input id='author' value="{{admin_name}}" style="display:none">
                        </dl>
                        <div id="answer_text" style="border:1px solid #a9a9a9; background-color:white">
                            <textarea id="ans_content" style="width:100%; height:150px; border:none; padding:20px"></textarea>
                            <div style="border-top:1px solid #e4e4e4; height:40px;text-align:right;">
                                <div id="btn-answer-save" style="padding:9px 25px 9px 25px; display:inline-block">등록</div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/admin}}
                {{/answer}}

            </div>

            <div class="text-center" style="margin-top:50px;">
                {{#user}}
                <button onclick="location.href='/question/update/{{question.id}}'" class="submit" style="margin-right:5px;background: #428bca;color: #fff;">수정</button>
                {{/user}}
                {{#UserOrAdmin}}
                <button id="btn-question-delete" class="submit" style="margin-right:5px">삭제</button>
                {{/UserOrAdmin}}
                <button onclick="location.href='/question'" class="submit">목록</button>
            </div>
        </div>
    </section>

 </main><!-- End #main -->

{{>layout/footer}}