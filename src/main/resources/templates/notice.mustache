{{>layout/header}}

 <main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="/">홈</a></li>
            <li>공지사항</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->

    <section id="" class="notice">
        <div class="container">
            <div class="section-title">
              <h2 class="hangul">공지사항</h2>
            </div>
            <div class="col-lg-12 " data-aos="fade-up" data-aos-delay="300">
                <table class="table table-hover hangul" rules="groups">
                    <thead bgcolor="#9ac3e1" >
                        <tr>
                            <th>번호</th>
                            <th>제목</th>
                            <th>작성자</th>
                            <th>최종수정일</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    {{#notice}}
                      <tr>
                        <td>{{id}}</td>
                        <td style="text-align:left;"><a href="/notice-detail/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                      </tr>
                    {{/notice}}
                    </tbody>
                </table>
                </hr>
                <ul style="display:flex; justify-content:center;margin-top:20px;" class="pagination">
                    {{#check_pre}}
                        <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
                    {{/check_pre}}
                    {{#view_numbers}}
                        <li class="page-item"><a class="page-link" href="?page={{.}}">{{.}}</a></li>
                    {{/view_numbers}}
                    {{#check_next}}
                        <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
                    {{/check_next}}
                </ul>

                <div class="text-right">
                    {{#admin}}
                    <button onclick="location.href='/administer/enroll-notice'" class="submit text-right">글쓰기</button>
                    {{/admin}}
                </div>
            </div>

        </div>
    </section>

 </main><!-- End #main -->

{{>layout/footer}}