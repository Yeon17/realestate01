{{>layout/header}}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <ol>
            <li><a href="/">홈</a></li>
            <li>매수하기</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs Section -->
    <!-- Request Section -->
    <section id="request" class="request">
      <div class="container">

        <div class="section-title">
          <h2 class="hangul">매수하기</h2>
        </div>

          <div class="col-lg-12" data-aos="fade-up" data-aos-delay="300" >

            <div class="row margin-bottom-40" >
              <div class="col-md-12 col-sm-12" style="border-bottom:1px solid #428bca;">
                <ul class="nav nav-tabs hangul" >
                  <li class="nav-item" ><a class="nav-link active selected" href="/request/buy" style=" font-weight:bolder; background-color:#428bca;color:white; border:1.5px solid #428bca;">매수하기</a></li>
                  <li class="nav-item"><a class="nav-link active" href="/request/sell" style="" >매도하기</a></li>
                </ul>
              </div>

            <div class="request-form">
            <form name="request" role="form" >
              <table class="table table-bordered hangul">
                <tbody>

                <colgroup>
                  <col width="400px"  bgcolor="#f5f9fc" class="align-middle"/>
                  <col width="1200px"/>
                </colgroup>

                <input id="trade" value="매수" style="display:none;"/>

                <tr>
                  <td class="align-middle">아파트 선택</td>
                  <td >
                    <select class="form-control" style="width:250px" id="addressKindU" name="addressKindU" onchange="addressKindChange(this)" >
                      <option selected>전체</option>>
                      <option>동천파크자이</option>
                      <option>더샵 동천 이스트포레</option>
                      <option>수지 삼성4차</option>
                      <option>수지 래미안이스트파크</option>
                      <option>수지 파크푸르지오</option>
                    </select>
                  </td>
                </tr>

                <tr>
                  <td class="align-middle">타입</td>
                  <td>
                    <select class="form-control" style="width:250px" id="addressKindD" name="addressKindD">
                      <option>아파트를 선택해주세요</option>
                    </select>
                  </td>

                </tr>

                <tr>
                  <td class="align-middle">거래종류</td>
                  <td>
                    <select id="transaction" name="transaction" class="form-control" style="width:200px">
                      <option selected>전체</option>
                      <option>매매</option>
                      <option>전세</option>
                      <option>월세</option>
                      <option>분양</option>
                    </select>
                  </td>
                </tr>

                <tr>
                  <td class="align-middle">희망 가격</td>
                  <td><input type="text" class="form-control" id="price" name="price" placeholder="최소(억원)~최대(억원)"/></td>
                </tr>

                <tr>
                  <td class="align-middle">희망 입주일자</td>
                  <td><input type="date" class="form-control" id="date" name="date"/></td>

                </tr>

                <tr>
                  <td class="align-middle">방문 날짜/시간</td>
                  <td><input type="datetime-local" class="form-control" id="visit" name="visit"/></td>

                </tr>

                <tr>
                  <td class="align-middle">연락처</td>
                  <td>
                    <input type="text" class="form-control" id="name" name="name"  placeholder="이름"/>
                    <br>
                    <input type="text" class="form-control" id="phone" name="phone"  placeholder="휴대폰 번호"/>
                  </td>

                </tr>
                <tr>
                  <td class="align-middle">상세내용</td>
                  <td>
                    <textarea class="form-control" id="summernote" name="message"></textarea>
                  </td>
                </tr>

                <tr>
                  <td class="align-middle">개인정보 수집이용 동의<a href="#privacy_view" data-toggle="modal">[보기]</a></td>
                  <td>
                    <input type='radio' name='consent' value='agree'/>동의함 &nbsp
                    <input type='radio' name='consent' value='disagree' />동의안함
                  </td>

                </tr>
                </tbody>
              </table>

             </form>
            <div class="text-center"><button type="submit" id="btn-request-save">등록</button></div>
           </div>
          </div>
      </div>
<!--팝업 창-->
      <div id="privacy_view" class="modal fade" tabindex="-1" role="dialog" style="z-index:99999;">
        <div class="modal-dialog" style="max-width:520px;">
          <div class="modal-content">
            <div class="modal-body hangul">

              <h1 class="margin-top-20;">개인정보 수집·이용에 대한 안내</h1>
              <div class="text" style="margin-top:25px;line-height:1.8;">
                단지내 동천파크자이 공인중개사 사무소는 서비스 제공을 위해서 아래와 같이 개인정보를 수집합니다. <br>
                정보주체는 본 개인정보의 수집 및 이용에 관한 동의를 거부 할 권리가 있으나, 서비스 제공에 필요한 최소한의 개인정보로 동의해야 서비스를 이용할 수 있습니다.
              </div>

              <table class="table table-bordered table-striped margin-top-20">
                <tr class="table-th">
                  <th class="text-center">목적</th>
                  <th class="text-center">항목</th>
                  <th class="text-center">보유기간</th>
                </tr>
                <tr class="table-td">
                  <td class="text-center vertical-middle">연락 서비스 제공</td>
                  <td class="text-center">휴대폰번호, 이메일,<br/>문의 또는 요청사항</td>
                  <td class="text-center">동의일로부터 30일</td>
                </tr>
              </table>

              <div class="btn btn-block" onclick="$('#privacy_view').modal('hide');" style="background-color:#f9f9f9;"><strong>확인</strong></div>
            </div>
          </div>
        </div>
      </div>
      </div>

    </section><!-- End Request Section -->

  </main><!-- End #main -->

{{>layout/footer}}